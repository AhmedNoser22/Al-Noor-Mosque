@model IEnumerable<GetRoleVM>

@{
    ViewData["Title"] = "عرض الصلاحيات";
}
<div class="container mt-5 text-center">
    <a asp-action="create" asp-controller="roles" class="btn btn-primary btn-lg shadow rounded-pill px-5 mb-4">
        إضافة صلاحية جديدة
    </a>
</div>

<!-- ✅ Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/show.css" rel="stylesheet" />

<div class="container mt-5">

    <!-- ✅ زر التنقل لأسفل -->
    <div class="text-center mb-4">
        <button onclick="scrollToTable()" class="btn btn-success btn-lg shadow rounded-pill px-5">
            الصلاحيات
        </button>
    </div>

    <!-- ✅ جدول عرض الأطفال -->
    <div class="table-responsive" id="teachersTable">
        <table class="table table-hover table-bordered text-center align-middle shadow rounded">
            <thead class="table-dark">
                <tr>
                    <th>الاسم</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                            <tr>
                                <td>@role.Name</td>
                                <td>
                            <a class="btn btn-outline-danger btn-sm" asp-action="GetManagers" asp-route-id="@role.Id">Management</a>
                                </td>
                            </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- ✅ سكربت التمرير -->
<script>
    function scrollToTable() {
        var element = document.getElementById("teachersTable");
        if (element) {
            element.scrollIntoView({ behavior: "smooth", block: "start" });
        }
    }

    window.addEventListener('load', function () {
        scrollToTable();
    });
</script>
