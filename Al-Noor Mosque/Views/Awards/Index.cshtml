@model IEnumerable<AwardVM>

@{
    ViewData["Title"] = "عرض الجوائز";
}

<!-- ✅ Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/show.css" rel="stylesheet" />

<div class="container mt-5">

    <!-- ✅ زر التنقل لأسفل -->
    <div class="text-center mb-4">
        <button onclick="scrollToTable()" class="btn btn-success btn-lg shadow rounded-pill px-5">
            الجوائز
        </button>
    </div>

    <!-- ✅ جدول عرض الأطفال -->
    <div class="table-responsive" id="teachersTable">
        <table class="table table-hover table-bordered text-center align-middle shadow rounded">
            <thead class="table-dark">
                <tr>
                    <th>الجائزة</th>
                    <th>للحاصلين علي </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var award in Model)
                {
                        <tr>
                            <td>@award.Title</td>
                            <td>@award.Description</td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- ✅ سكربت التمرير -->
<script>
    function scrollToTable() {
        var element = document.getElementById("teachersTable");
        if (element) {
            element.scrollIntoView({ behavior: "smooth", block: "start" });
        }
    }

    window.addEventListener('load', function () {
        scrollToTable();
    });
</script>
