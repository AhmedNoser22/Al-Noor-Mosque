@model IEnumerable<ActivityVM>

@{
    ViewData["Title"] = "عرض الأنشطة";
}

<!-- ✅ Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/show.css" rel="stylesheet" />

<div class="container mt-5">

    <!-- ✅ زر التنقل لأسفل -->
    <div class="text-center mb-4">
        <button onclick="scrollToTable()" class="btn btn-primary btn-lg shadow rounded-pill px-5">
            الانشطة داخل المسجد
        </button>
    </div>

    <!-- ✅ جدول عرض الأنشطة -->
    <div class="table-responsive" id="activitiesTable">
        <table class="table table-hover table-bordered text-center align-middle shadow rounded">
            <thead class="table-dark">
                <tr>
                    <th>اسم النشاط</th>
                    <th>الوصف</th>
                    <th>تاريخ البدء</th>
                    <th>تاريخ الانتهاء</th>
                    <th>المكان الخاص به</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var activity in Model)
                {
                        <tr>
                            <td>@activity.Name</td>
                            <td>@activity.Description</td>
                            <td>@activity.StartDate.ToString("yyyy/MM/dd")</td>
                            <td>@activity.EndDate.ToString("yyyy/MM/dd")</td>
                            <td>@activity.Location</td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- ✅ سكربت التمرير -->
<script>
    function scrollToTable() {
        var element = document.getElementById("activitiesTable");
        if (element) {
            element.scrollIntoView({ behavior: "smooth", block: "start" });
        }
    }

    window.addEventListener('load', function () {
        scrollToTable();
    });
</script>
