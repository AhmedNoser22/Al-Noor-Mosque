@model WorkerVM
@{
    ViewData["Title"] = "إضافة موظف";
}

<!-- ✅ تنسيقات CSS داخل الصفحة -->
<link href="~/css/entity.css" rel="stylesheet" />

<!-- ✅ محتوى الفورم -->
<div class="container mt-5" id="add-teacher-form">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h4>➕ إضافة موظف جديد</h4>
                </div>
                <div class="card-body bg-white p-4">
                    <form asp-action="CreateWorker" asp-controller="workers" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label">الاسم</label>
                            <input asp-for="Name" class="form-control" placeholder="أدخل الاسم الكامل" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Phone" class="form-label">رقم الهاتف</label>
                            <input asp-for="Phone" class="form-control" placeholder="أدخل رقم الهاتف" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Age" class="form-label">العمر</label>
                            <input asp-for="Age" class="form-control" placeholder="أدخل العمر" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="JopTitle" class="form-label">الوظيفة المسؤول عنها</label>
                            <input asp-for="JopTitle" class="form-control" placeholder="أدخل الوظيفة" />
                            <span asp-validation-for="JopTitle" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="image" class="form-label">صورة الموظف</label>
                            <input type="file" asp-for="image" class="form-control" />

                            <small class="form-text text-dark d-block fw-bold">
                                فقط ملفات @FileSetting.AllowExtension بحجم أقصى @FileSetting.MaxSize bytes
                            </small>
                            <span asp-validation-for="image" class="text-danger d-block"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-purple">
                                <i class="bi bi-save me-2"></i> حفظ المعلم
                            </button>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


