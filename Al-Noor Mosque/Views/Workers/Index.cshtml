@model IEnumerable<WorkerDisplayVM>
@{
    ViewData["Title"] = "عرض الموظفين";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/show.css" rel="stylesheet" />

<div class="container mt-5">

    <div class="text-center mb-4">
        <button onclick="scrollToTeachers()" class="btn btn-success btn-lg shadow rounded-pill px-5">
            بيانات المسؤلين عن المسجد
        </button>
    </div>

    <div class="table-responsive" id="teachersTable">
        <table class="table table-hover table-bordered text-center align-middle shadow rounded">
            <thead class="table-dark">
                <tr>
                    <th>الاسم</th>
                    <th>العمر</th>
                    <th>رقم التليفون</th>
                    <th>الوظيفةالمسؤول عنه</th>
                    <th>الصورة </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var worker in Model)
                {
                    <tr>
                        <td>@worker.Name</td>
                        <td>@worker.Age</td>
                        <td>@worker.Phone</td>
                        <td>@worker.JopTitle</td>
                        <td>
                            <img src="@Url.Content(worker.image)" alt="صورة المعلم" class="img-thumbnail" style="width: 100px; height: 100px;">
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function scrollToTeachers() {
        var element = document.getElementById("teachersTable");
        if (element) {
            element.scrollIntoView({ behavior: "smooth", block: "start" });
        }
    }

    window.addEventListener('load', function () {
        scrollToTeachers();
    });
</script>
